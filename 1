using System; 
 
namespace Names 
{ 
 internal static class HistogramTask 
 { 
 public static HistogramData GetBirthsPerDayHistogram(NameData[] names, string name) 
 { 
 var period = new string[31]; 
 for (var day = 0; day < period.Lenght; day++) 
 period[day] = (day + 1); 
 var Birthday = new double[ 31 ]; 
 foreach (var VARIABLE in names) 
 if ( VARIABLE.Name == name & VARIABLE != 1) 
 Birthday[ VARIABLE - 1] ++; 
 return new HistogramData(string.Format("Рождаемость людей с именем '" + name + "'", period, Birthday)); 
 } 
 } 
} 
 
 
